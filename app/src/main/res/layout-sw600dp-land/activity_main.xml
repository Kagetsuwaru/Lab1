<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_brown"
    android:padding="@dimen/spacing_medium"
    tools:context=".MainActivity">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/profile_image_size_land"
        android:layout_height="@dimen/profile_image_size_land"
        android:contentDescription="@string/profile_description"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Vertical Guideline for content start -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_content_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="140dp" />

    <!-- Name -->
    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/full_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_xxlarge"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintStart_toStartOf="@+id/guideline_content_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_image"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="@dimen/spacing_large" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toStartOf="@+id/tv_full_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_full_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_full_name"
        app:layout_constraintBottom_toTopOf="@+id/tv_group"
        android:layout_marginTop="@dimen/spacing_xs" />

    <!-- Group -->
    <TextView
        android:id="@+id/tv_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/group"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/text_medium"
        app:layout_constraintStart_toStartOf="@+id/tv_full_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_full_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
        android:layout_marginTop="@dimen/spacing_xs" />

    <!-- Separator Line -->
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_medium"
        app:layout_constraintStart_toStartOf="@+id/tv_full_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_large" />

    <!-- Contact Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/separator"
        app:layout_constraintEnd_toEndOf="@+id/separator"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium">

        <!-- Phone Icon -->
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:contentDescription="@string/phone"
            android:src="@drawable/ic_phone"
            app:tint="@color/primary_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_telegram"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <!-- Phone Text -->
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@+id/iv_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_phone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_phone" />

        <!-- Telegram Icon -->
        <ImageView
            android:id="@+id/iv_telegram"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:contentDescription="@string/telegram"
            android:src="@drawable/ic_telegram"
            app:tint="@color/primary_color"
            app:layout_constraintStart_toStartOf="@+id/iv_phone"
            app:layout_constraintTop_toBottomOf="@+id/iv_phone"
            app:layout_constraintBottom_toTopOf="@+id/iv_email"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <!-- Telegram Text -->
        <TextView
            android:id="@+id/tv_telegram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/telegram"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@+id/iv_telegram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_telegram"
            app:layout_constraintBottom_toBottomOf="@+id/iv_telegram" />

        <!-- Email Icon -->
        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:contentDescription="@string/email"
            android:src="@drawable/ic_email"
            app:tint="@color/primary_color"
            app:layout_constraintStart_toStartOf="@+id/iv_phone"
            app:layout_constraintTop_toBottomOf="@+id/iv_telegram"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Email Text -->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:layout_marginStart="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@+id/iv_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_email"
            app:layout_constraintBottom_toBottomOf="@+id/iv_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>